+void ToolbarView::ScreenshotButtonPressed() {
+  // Get the path to the executable file
+  base::FilePath exe_path;
+  if (!base::PathService::Get(base::FILE_EXE, &exe_path)) {
+    return;
+  }
+
+  // Get the directory containing the executable
+  base::FilePath exe_dir = exe_path.DirName();
+
+  // Create path to screenshot.exe in the same directory
+  base::FilePath screenshot_path = exe_dir.AppendASCII("screenshot.exe");
+
+  // Create command line to launch screenshot.exe
+  base::CommandLine cmd_line(screenshot_path);
+
+  // Launch options
+  base::LaunchOptions options;
+  options.wait = false;  // Don't wait for the process to finish
+
+  // Launch the screenshot.exe process
+  base::LaunchProcess(cmd_line, options);
+}
